                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:prism="http://prismlibrary.com/"
                        DispatcherUnhandledException="OnDispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Kropka.EasyXaml.Client.Views;component/Resources/StylesDictionary.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Kropka.EasyXaml.Client.Views;component/Resources/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Kropka.EasyXaml.Client.Views;component/Resources/Brushes.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Kropka.EasyXaml.Client.Views;component/Resources/Fonts.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>

<Window x:Class="Kropka.EasyXaml.Client.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:inf="clr-namespace:Kropka.EasyXaml.Client.Infrastructure.Constants;assembly=Kropka.EasyXaml.Client.Infrastructure"
        xmlns:prism="http://prismlibrary.com/"
        Title="{Binding Title}"
        Width="1200"
        Height="800"
        prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Height="50"
                Background="Red">
            <Border.InputBindings>
                <MouseBinding Command="{Binding DragWindowCommand}" Gesture="LeftClick" />
            </Border.InputBindings>
        </Border>
        <ContentControl Grid.Row="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        prism:RegionManager.RegionName="{x:Static inf:RegionNameConstants.ContentRegion}" />
    </Grid>
</Window>
